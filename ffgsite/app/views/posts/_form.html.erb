<% form_for @post, :url => @link do |f| %>
	<%= f.error_messages %>

	<div class="span-4">
    <%= f.label :sms_date %>
	</div>
	<div class="span-14 last">
	  <%=@post.sms_date.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M%p %a, %b %d")%>
    <%= f.hidden_field :sms_date %>
	</div>
	<hr class="space" />
	
	<div class="span-4">
		<%= f.label 'The text message you sent:' %>
	</div>
	<div class="span-14 last">
		<%= @post.sms_body %>
		<%= f.hidden_field :sms_body %>
	</div>
	<hr class="space" />
	
	<div class="span-4">
		<%= f.label :long_description, 'Please describe this scenario in more detail:' %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :long_description, :rows => "4" %>
	</div>
	<hr class="space" />
	
	<div class="span-4">
		<%= f.label :p1, 'Why did you decide not to post this to Facebook?' %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :p1, :rows => "4" %>
	</div>
	<hr class="space" />
	
	<div class="span-4">
		<%= f.label :p2, "Were there any people you especially didn't want to see this post?" %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :p2, :rows => "4" %>
	</div>
	<hr class="space" />

	<div class="span-4">
		<%= f.label :p3, 'Were there any people you especially wanted to see this post?' %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :p3, :rows => "4" %>
	</div>
  <hr class="space" />

	<div class="span-4">
		<%= f.label :p4, 'Where were you when you decided not to post this to Facebook?' %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :p4, :rows => "4" %>
	</div>
  <hr class="space" />

	<div class="span-4">
		<%= f.label :p5, 'What were you doing when you decided not to post this to Facebook?' %>
	</div>
	<div class="span-6 append-8 last">
    <%= f.text_area :p5, :rows => "4" %>
	</div>
  <hr class="space" />

	<div class="prepend-4 span-14 last">
	    <%= f.submit(@post.new_record? ? 'Create' : 'Update', :class => "submit") %>
	</div>
<% end %>
